<script>
$(function () {

  function hideResponseMessage() {
    setTimeout(function() {
      $('#succes-message').addClass('hidden');
      $('#failure-message').addClass('hidden');
    }, 10000);
  }

  $('.form-customer').submit(function( event ) {
    event.preventDefault();

    $.ajax({
      type: 'POST',
      url: `/productUserDemand`,
      contentType: "application/json",
      data: JSON.stringify({
        name: $('#user-name').val(),
        email: $('#user-email').val(),
        phone: $('#user-phone').val(),
        subject: $('#user-subject').val(),
        message: $('#user-message').val()
      }),
      success: function () {
        $('#user-name').val('');
        $('#user-email').val('');
        $('#user-phone').val('');
        $('#user-subject').val('');
        $('#user-message').val('');

        $('#succes-message').removeClass('hidden');
        hideResponseMessage();

        parent.location.hash = '';
      },
      error: function() {
        $('#failure-message').removeClass('hidden');
        hideResponseMessage();
      }
    });
    
  });
});
</script>

